@model IEnumerable<RepositorioDocumentos.Models.DocumentCode>

@{
    ViewBag.Title = "Listado de Codigos para Documentos";
}

<link rel="stylesheet" href="//code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
<link href="~/Content/toastr.css" rel="stylesheet" type="text/css" />
<link href="~/Content/dataTables.bootstrap4.min.css" rel="stylesheet" />

<div class="container-fluid">
    <section class="text-dark border-custom border">
        <div class="bg-secondary text-light panel-custom border">
            <h6 class="panel-title">
                Listado de Códigos para Documentos
            </h6>
        </div>

        <div class="mt-3 ml-2 mr-2">
            <a href="javascript:void(0);" class="btn btn-danger btn-sm btn-new">Nuevo Código</a>
            <table id="documentCodeTable" class="table table-striped table-bordered table-condensed table-sm mt-1">
                <thead>
                    <tr>
                        <th class="text-center">
                            Id
                        </th>
                        <th>
                            Referencia
                        </th>
                        <th>
                            Código
                        </th>

                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="text-center field-id">@item.Id</td>
                            <td class="field-pattern"></td>
                            <td class="field-description">@item.Code</td>

                            <td align="center">
                                @*<a class="btn btn-sm btn-success edit-btn edit-button-width" href="javascript:void(0)" title="Editar">
                                    Editar
                                </a>*@
                                <a class="btn btn-sm btn-danger btn-remove" href="javascript:void(0)" title="Eliminar">
                                    Eliminar
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </section>
</div>

@section scripts {
    @Scripts.Render("~/bundles/jqueryval")

    <script src="~/Scripts/jquery.dataTables.min.js"></script>
    <script src="~/Scripts/dataTables.bootstrap4.min.js"></script>
    <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
    <script src="~/Scripts/toastr.js"></script>

}
<script type="text/javascript">

    $(document).ready(function () {
        $("#DocumentCodes").addClass("menu-active");
        $("#documentCodeTable").DataTable();

        $('.btn-new').click(function () {
            if (!$('.save-btn')[0]) {
                //Direcciones
                let _directorates = @Html.Raw(Json.Encode(ViewBag.Direcciones));
                let directorates = [];

                for (const directorate of _directorates) {
                    directorates.push(`<option value="${directorate.Value}">${directorate.Text}</option>`)
                }

                const departments = [];  
                const docTypes = [];

                const newRowHtml = '<tr>' +
                    '<td class="text-center">##</td>' +
                    `<td class="field-pattern-new">` +
                    `<select class="form-control form-control-sm new-pattern-dir" id="pattern-dir"> ${directorates} </select>` +
                    `<select class="form-control form-control-sm new-pattern-depto" id="pattern-depto"> ${departments} </select>` +
                    `<select class="form-control form-control-sm new-pattern-doc" id="pattern-doc"> ${docTypes} </select>` +
                    `</td>` +
                    '<td class="field-description-new" style="vertical-align: middle;"><input type="text" maxlength="20" min="3" class="form-control form-control-sm new-description" placeholder="Escribir código"></td>' +
                    '<td class="text-center">' +
                    '<button class="btn btn-sm btn-success save-btn">Guardar</button>' +
                    '<button class="btn btn-sm btn-danger cancel-btn">Cancelar</button>' +
                    '</td>' +
                    '</tr>';

                $('#documentCodeTable tbody').prepend(newRowHtml);

                $("#pattern-dir").on('change', function (evt) {
                   
                    $.ajax({
                        "url": `/Departamento/getDepartmentsByDirectorateIdReference?directorateReference=${evt.currentTarget.value}`,
                        "type": "POST",
                        "success": function (response) {
                            if (response.result === "200") {
                                //Re-render departments
                                $("#pattern-depto").empty();
                                $("#pattern-doc").empty();
                                
                                for (const option of response.message) {
                                    $('#pattern-depto').append($(`<option value="${option.Value}">${option.Text}</option>`));
                                }

                                renderDocumentCode($('#pattern-dir').val(), $('#pattern-depto').val(), $('#pattern-doc').val());
                                console.log(response);
                            } else {
                                toastr.error(response.message);
                            }
                        }
                    });
                });

                $("#pattern-depto").on('change', function (evt) {

                    if ($("#pattern-doc").length === 1) {
                        $.ajax({
                            "url": `/DocumentoTipos/getDocumentTypesReference`,
                            "type": "POST",
                            "success": function (response) {
                                if (response.result === "200") {
                                    //Re-render docTypes
                                    for (const option of response.message) {
                                        $('#pattern-doc').append($(`<option value="${option.Value}">${option.Text}</option>`));
                                    }

                                    renderDocumentCode($('#pattern-dir').val(), $('#pattern-depto').val(), $('#pattern-doc').val());
                                    console.log(response);
                                } else {
                                    toastr.error(response.message);
                                }
                            }
                        });
                    }
                });

                $("#pattern-doc").on('change', function (evt) {
                    renderDocumentCode($('#pattern-dir').val(), $('#pattern-depto').val(), evt.currentTarget.value);
                });
            }
        });

        $(document).on('click', '.save-btn', function () {
            var description = $(this).closest('tr').find('.new-description').val();

            if (!description) {
                toastr.error("El campo código no puede estar vacio.");
                return false;
            }

            $.ajax({
                "url": `/DocumentoCodigo/AddDocumentCode?description=${description}`,
                "type": "POST",
                "success": function (response) {
                    if (response.result === "200") {
                        toastr.success(`El registro fue agregado!`);
                        $('.field-description-new').text(description);
                        setTimeout(function () {
                            window.location.reload(true);
                        }, 1000);
                    } else {
                        toastr.error(response.message);
                    }
                }
            });
        });

        $(document).on('click', '.cancel-btn', function () {
            $(this).closest('tr').remove();
        });

        $('#documentCodeTable').on('click', '.edit-btn', function () {
            var editButton = $(this);

            if (editButton.prop('title') === "Editar") {
                editButton.prop('title', 'Guardar');
                editButton.html("Guardar");
                editButton.closest('tr').find('.btn-remove').html("Cancelar");
                editButton.closest('tr').find('.btn-remove').prop("title", "Cancelar");

                const description = editButton.closest('tr').find('.field-description').text();

                editButton.closest('tr').find('.field-description').html('<input type="text" maxlength="20" min="3" class="form-control form-control-sm edit-description" value="' + description + '">');

            } else {
                const id = editButton.closest('tr').find('.field-id').text();
                const description = editButton.closest('tr').find('.edit-description').val();

                if (!description) {
                    toastr.error("El campo código no puede estar vacio.");
                    return false;
                }

                $.ajax({
                    "url": `/DocumentoCodigo/UpdateDocumentCode?id=${id}&description=${description}`,
                    "type": "POST",
                    "success": function (response) {
                        if (response.result === "200") {
                            toastr.success(`El registro #${id} fue actualizado!`);
                            editButton.prop('title', 'Editar');
                            editButton.closest('tr').find('.field-description').text(description);

                            editButton.html("Editar");
                            editButton.closest('tr').find('.btn-remove').html("Eliminar");
                            editButton.closest('tr').find('.btn-remove').prop("title", "Eliminar");
                        } else {
                            toastr.error(response.message);
                        }
                    }
                });
            }
        });

        $('#documentCodeTable').on('click', '.btn-remove', function () {
            var removeButton = $(this);

            if (removeButton.html() === "Cancelar") {
                window.location.reload(true);
            } else {
                const id = removeButton.closest('tr').find('.field-id').text();
                const description = removeButton.closest('tr').find('.field-description').text();

                if (confirm(`Confirma que desea eliminar el código: ${description}`)) {
                    $.ajax({
                        "url": `/DocumentoCodigo/DeleteDocumentCode?id=${id}`,
                        "type": "POST",
                        "success": function (response) {
                            if (response.result === "200") {
                                toastr.success(`El registro #${id} fue eliminado!`);
                                setTimeout(function () {
                                    window.location.reload(true);
                                }, 1000);
                            } else {
                                toastr.error(response.message);
                            }
                        }
                    });
                }
            }
        });

        //Replace Previous -> Anterior
        $('body :not(script)').contents().filter(function () {
            return this.nodeType === 3;
        }).replaceWith(function () {
            return this.nodeValue.replace('Previous', 'Anterior');
        });

        //Replace Next -> Próximo
        $('body :not(script)').contents().filter(function () {
            return this.nodeType === 3;
        }).replaceWith(function () {
            return this.nodeValue.replace('Next', 'Próximo');
        });

        //Replace Showing -> Mostrando
        $('body :not(script)').contents().filter(function () {
            return this.nodeType === 3;
        }).replaceWith(function () {
            return this.nodeValue.replace('Showing', 'Mostrando');
        });

        //Replace Show -> Mostrar
        $('body :not(script)').contents().filter(function () {
            return this.nodeType === 3;
        }).replaceWith(function () {
            return this.nodeValue.replace('Show', 'Mostrar');
        });

        //Replace Entries -> Registros
        $('body :not(script)').contents().filter(function () {
            return this.nodeType === 3;
        }).replaceWith(function () {
            return this.nodeValue.replace('entries', 'registros');
        });

        //Replace Search -> Buscar
        $('body :not(script)').contents().filter(function () {
            return this.nodeType === 3;
        }).replaceWith(function () {
            return this.nodeValue.replace('Search', 'Buscar');
        });
    });

    function renderDocumentCode(directorate, department, documentType) {
        const _directorate = directorate && directorate !== "null" ? `-${directorate.trim()}` : "";
        const _department = department && department !== "null" ? `-${department.trim()}` : "";
        const _documentType = documentType && documentType !== "null" ? `-${documentType.trim()}` : "";

        $(".new-description").val(`RC${_directorate}${_department}${_documentType}-`);
    }

</script>
